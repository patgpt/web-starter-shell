{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["vitepress/client"]
  },
  "include": [
    "env.d.ts",
    ".vitepress/**/*.ts",
    ".vitepress/**/*.d.ts",
    ".vitepress/**/*.tsx",
    ".vitepress/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".vitepress/dist",
    ".vitepress/cache"
  ]
}
