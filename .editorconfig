# EditorConfig helps maintain consistent coding styles
# across different editors and IDEs
# https://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

# Markdown files
[*.md]
trim_trailing_whitespace = false

# TypeScript and JavaScript files
[*.{ts,tsx,js,jsx}]
quote_type = single

# CSS and SCSS files
[*.{css,scss}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Tailwind config
[tailwind.config.{js,ts}]
indent_size = 2

# Git config files
[.git*]
indent_style = tab

# Ignore generated files
[{dist,build,node_modules}/**]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset 